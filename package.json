{
  "name": "karabiner-ts",
  "version": "1.0.0",
  "license": "MIT",
  "types": "build/index.d.ts",
  "main": "build/index.js",
  "files": [
    "build"
  ],
  "devDependencies": {
    "@swc/core": "^1.3.35",
    "@swc/jest": "^0.2.24",
    "@swc/wasm": "^1.3.35",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.7.19",
    "jest": "^29.4.2",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "tsm": "^2.2.2",
    "typescript": "^4.9.5"
  },
  "scripts": {
    "build": "rm -rf build; tsc --outDir build",
    "postbuild": "rg --files-with-matches 'gmail' build  && echo 'Email address found in files above!' && exit 1 || exit 0",
    "watch": "nodemon --exec yarn build -e ts",
    "test": "jest --watch",
    "test:pack": "mkdir -p .tmp; yarn build; yarn pack; mv ./karabiner-ts-v*.tgz ./.tmp/; pushd personal_setup; yarn run install:packed; popd",
    "pretty": "prettier -w src",
    "deploy:test": "tsm src/deploy/testRule/go.ts",
    "deploy:default": "tsm src/deploy/profile/go.ts",
    "deploy:backup": "./src/deploy/backup.sh"
  }
}
